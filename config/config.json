{
  "input": {
    "dataset_folder": "./data/garbage_augmented"
  },
  "output": {
    "model_save_dir": "./saved_models"
  },
  "dataset_parameters": {
    "min_samples_per_class": 200
  },
  "parameters": {
    "train": true,
    "test": true,
    "show_preview": true,
    "debug": true,
    "load_model": false,
    "model_load_path": "./saved_models/model_last.pth"
  },
  "hyper_parameters": {
    "batch_size": 32,
    "weight_decay": 0.0005,
    "learning_rate": 0.01,
    "learning_rate_scheduler_step": 1,
    "learning_rate_scheduler_gamma": 0.1,     
    "momentum": 0.9,
    "epochs": 10,
    "seed": 42
    },
  "train_parameters": {
    "network_type": "resnet18",
    "train_split": 0.7,
    "val_split": 0.15,
    "test_split": 0.15,
    "accuracy_evaluation_epochs": 4,
    "accuracy_target": 98
  },
  "early_stop_parameters": {
    "start_epoch": 3,
    "loss_evaluation_epochs": 2,
    "patience": 4,
    "improvement_rate": 0.1
    }
}
